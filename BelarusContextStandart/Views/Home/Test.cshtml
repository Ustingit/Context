<body>
<div class="container">

    <!-- Responsive Navigation Bar (from http://www.dailywebtuition.com/bootstrap-4-navbar-fixed-top-example/ ) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">
            <img class="header-logo" src="~/Content/Images/Common/ornament-4.png" alt="logo"/>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
 
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Translation with context
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Dictionary</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMedia" role="button" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false">
                        Media
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMedia">
                        <a class="dropdown-item" href="#">Facebook</a>
                        <a class="dropdown-item" href="#">Instagram</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Blog</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Help & About</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false">
                        Languages
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">English</a>
                        <a class="dropdown-item" href="#">Russian</a>
                        <a class="dropdown-item" href="#">Belarussian</a>
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @Html.Partial("_LoginPartial")
            </form>
        </div>
    </nav>
    <!-- Responsive Navigation Bar -->

    <div class="container mt-60" id="test_content">
        <div class="container">
            <div class="row">
                <div class="wrapper wrapper--w1226">
                    <div class="card card-5">
                        <div class="card-body">
                            @using (Ajax.BeginForm("Translations", "Home", new AjaxOptions { UpdateTargetId = "results" }))
                            {
                                <div class="row row-space">
                                    <div class="col-8">
                                        <div class="input-group">
                                            <input class="input--style-1" type="text" id="Data" name="data" placeholder="Введите текст для перевода" value="">
                                        </div>
                                    </div>
                            
                                    @Html.HiddenFor(x => x.Reverse)
                                    @Html.HiddenFor(x => x.FromLang)
                                    @Html.HiddenFor(x => x.ToLang)

                                    <div class="col-2">
                                        <button class="btn btn-success" type="submit">Search</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="results"></div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="footer_contents bg-dark">
            <p>&copy; @DateTime.Now.Year. For further information please contact: <a href='mailto:ustinhtc@gmail.com?subject="mail from belarus context (footer) by Ustin"'>ustinhtc@gmail.com</a></p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
</body>
</html>

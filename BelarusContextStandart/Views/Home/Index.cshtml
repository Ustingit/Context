@model BelarusContextStandart.Models.LanguageModels.TranslateModel

@{
    ViewBag.Title = "Контекстные переводы беларуского языка";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-8">
        <h2>Getting started</h2>
        @if (Model != null)
        {
            <div>
                <form method="post" action="">
                    @Html.EditorFor(x => x.Data)
                    @Html.EditorFor(x => x.FromLang)
                    @Html.EditorFor(x => x.ToLang)
                    <input type="submit" value="Найти" />
                </form>
                
                @using (Html.BeginForm("GetTranslation", "Home", FormMethod.Get))
                {
                    <fieldset>
                        <p>
                            @Html.EditorFor(m => m.Data)
                        </p>
                        <p>
                            @Html.EditorFor(m => m.FromLang)
                        </p>
                        <p>
                            @Html.EditorFor(m => m.Reverse)
                        </p>
                        <p>
                            @Html.EditorFor(m => m.ToLang)
                        </p>
                        <p><input type="submit" value="Найти" /></p>
                    </fieldset>
                }
            </div>
            <div>

            </div>
        }
    </div>
</div>